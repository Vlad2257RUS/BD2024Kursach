<Page x:Class="BD2024Kursach.Operation.TableOperation.Data_channel_page"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BD2024Kursach.Operation.TableOperation"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Data_channel_page">

    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>



        <Label Grid.Row="0" Content="Название канала:"/>
        <TextBox x:Name="Channel_TextBox" Grid.Row="1"/>

        <Label Grid.Row="2" Content="Город:"/>
        <ComboBox x:Name="City_ch_ComboBox" Grid.Row="3"/>

        <Label Grid.Row="4" Content="Тип собственности:"/>
        <ComboBox x:Name="Type_of_ownership_ch_ComboBox" Grid.Row="5"/>

        <Label Grid.Row="6" Content="Начало работы: hh:mm"/>
        <TextBox x:Name="StartTimeTextBox" Grid.Row="7" Text="{Binding StartTime, StringFormat=hh\\:mm\\:ss}" />

        <Label Grid.Row="8" Content="Конец работы: hh:mm"/>
        <TextBox x:Name="EndTimeTextBox" Grid.Row="9" Text="{Binding EndTime, StringFormat=hh\\:mm\\:ss}" />

        <Label Grid.Row="10" Content="Сотрудник:"/>
        <ComboBox x:Name="Employee_ch_ComboBox" Grid.Row="11"/>

    </Grid>
</Page>
