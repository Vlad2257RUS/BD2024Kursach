<Page x:Class="BD2024Kursach.Operation.TableOperation.Data_employee_page"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BD2024Kursach.Operation.TableOperation"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Data_employee_page">

    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>


        <Label Grid.Row="0" Content="Сотрудник:"/>
        <TextBox Grid.Row="1" x:Name="Employee_TextBox"/>

        <Label Grid.Row="2" Content="Логин:"/>
        <TextBox x:Name="Login_TextBox" Grid.Row="3"/>

        <Label Grid.Row="4" Content="Пароль:"/>
        <PasswordBox Grid.Row="5" x:Name="Password_TextBox"/>

        <Label Grid.Row="6" Content="Роль:"/>
        <ComboBox Grid.Row="7" x:Name="Roles_ComboBox">
            <ComboBoxItem Tag="emp_ch" Content="Сотрудник канала"/>
            <ComboBoxItem Tag="administrator" Content="администратор"/>
            <ComboBoxItem Tag="analyst" Content="Аналитик"/>
        </ComboBox>

        <Label Grid.Row="8" Content="" HorizontalContentAlignment="Center"/>
        <Label Grid.Row="9" Content="Опционально" HorizontalContentAlignment="Center"/>

        <Label Grid.Row="10" Content="Возраст:"/>
        <TextBox Grid.Row="11" x:Name="Age_TestBox"/>

        <Label Grid.Row="12" Content="Почта:"/>
        <TextBox Grid.Row="13" x:Name="Email_TestBox"/>

        <Label Grid.Row="14" Content="Телефон:"/>
        <TextBox Grid.Row="15" x:Name="Phone_TestBox"/>

        <Label Grid.Row="16" Content="Аддрес:"/>
        <TextBox Grid.Row="17" x:Name="Address_TestBox"/>

    </Grid>
</Page>
